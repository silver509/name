        public string password;
        public string location;
        public List<object> userPosts = new List<object>();
        public List<object> userTaskList = new List<object>();
        public List<string> userMessageBox = new List<string>();
        public List<object> userChatRoomList = new List<object>();
        public int countBeforeLogout;
    }
    public class Post
    {
        public string workdescription;
        public int jobCost;
        public string poster;
